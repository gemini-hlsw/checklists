  <td class="centered checklist-description-column">{{item.description}} {{view.isWarn}} {{warn}}</td>
  <td class="centered checklist-status-column centered-content">
    {{#if item.freeText}}
      {{view Checklists.ResizableTextArea class="textarea-animated" name="status" valueBinding="item.status"}}
    {{else}}
      {{view Checklists.Select2 class="input-medium" containerCssClass="checklist-select2" placeholder="Status" selectionBinding="item.status" contentBinding="item.choices"}}
    {{/if}}
  </td>
  <td class="centered centered-content checklist-comment-column">{{view Checklists.ResizableTextArea class="textarea-animated" name="description" valueBinding="item.comment"}}</td>

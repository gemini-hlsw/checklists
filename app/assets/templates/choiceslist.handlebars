<div class="collapse in">
  <button class="btn btn-small pull-left" {{action checkAll target="view"}}><i class="icon-ok-sign"></i>&nbsp;all</button>&nbsp;<button class="btn btn-small pull-left"  {{action checkNone target="view"}}><i class="icon-remove-sign"></i>&nbsp;none</button>
  <label class="input-mini pull-right checkbox inline">
    <input type="checkbox" value="">
    Any text
  </label>
  <table class="table table-striped table-hover table-bordered table-condensed">
    <tbody>
      {{#each c in choices}}
        <tr>
          <td>
            <label class="checkbox">
              {{view Ember.Checkbox checkedBinding="c.selected" classNames="checkbox"}}{{c.name}}
            </label>
          </small>
          </td>
        </tr>
      {{/each}}
    <tbody>
  </table>
</div>
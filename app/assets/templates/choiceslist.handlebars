<div class="collapse in">
    <button {{bindAttr class="view.showChoices:disabled:enabled :btn :btn-small :pull-left"}} {{action checkAll target="view"}}><i class="icon-ok-sign"></i>&nbsp;all</button>&nbsp;<button {{bindAttr class="view.showChoices:disabled:enabled :btn :btn-small :pull-left"}} {{action checkNone target="view"}}><i class="icon-remove-sign"></i>&nbsp;none</button>
  <label class="pull-right checkbox inline">
    {{view Ember.Checkbox checkedBinding="freeText"}}
    Any status
  </label>
  <label class="pull-right checkbox inline">
    {{view Ember.Checkbox checkedBinding="commentOnly"}}
    Comment Only&nbsp;&nbsp;
  </label>
    <table class="table table-striped table-hover table-bordered table-condensed">
      <tbody>
        {{#with freeText as parentFreeText}}
          {{#each c in choices}}
            <tr>
              <td>
                <label class="checkbox">
                  {{view Checklists.ChoicesCheckbox checkedBinding="c.selected" disabledBinding="view.showChoices" class="checkbox"}} {{c.name}}
                </label>
              </small>
              </td>
            </tr>
          {{/each}}
        {{/with}}
      <tbody>
    </table>
</dix>
{{#if canDisplay}}
  <div class="span8 offset2 centered-content">
    <div class="well centered-content">
      <div class="row-fluid">
      <h1>{{name}} checklist for {{longFormattedDate}}</h1>
      <div class="row-fluid">
        <button class="btn pull-left" {{action goToPrevious}}><i class="icon-double-angle-left"></i> Prev</button>
        <button class="btn pull-right" {{action goToNext}}>Next <i class="icon-double-angle-right"></i></button>
      </div>
      <div class="row-fluid">
        <div class="well form-horizontal">
          <div class="control-group">
            <label class="control-label wide-label" for="supervisors">Eng supervising the activity</label>
            <div class="controls names-selectors">
              {{view Checklists.Select2Tags class="input-xxlarge" containerCssClass="checklist-select2" placeholder="Enter names" valuesBinding="engineers" dropdownCssClass="mousetrap" tagsBinding="view.settingsController.engineers"}}
            </div>
          </div><div class="control-group wide-label">
            <label class="control-label" for="technicians">Tech/Eng performing the checks</label>
            <div class="controls names-selectors">
              <input type="text" id="technicians" placeholder="Email">
            </div>
          </div>
        </div>
      </div>
      <table class="table table-stripped table-bordered">
        <tbody>
          {{#each group in groups}}
            <tr><td class="group-header" colspan="3"><h4>{{group.title}}</h4></td></tr>
              {{#each item in group.checks}}
                <tr>
                  <td class="centered">{{item.description}}</td>
                  <td class="centered centered-content">
                    {{view Ember.Select
                        class="input-small"
                        contentBinding="Checklists.CheckValues"
                        selectionBinding="item.status"}}
                  </td>
                  <td class="centered centered-content">{{view Checklists.ResizableTextArea class="textarea-animated" name="description" valueBinding="item.comment"}}</td>
                </tr>
              {{/each}}
          {{/each}}
        </tbody>
      </table>
      </div>
      <div class="centered-box row-fluid">
        <div class="center-box pull-left">
          <button class="btn pull-left" {{action goToPrevious}}><i class="icon-double-angle-left"></i> Prev</button>
          <button class="btn pull-left" {{action goToNext}}>Next <i class="icon-double-angle-right"></i></button>
        </div>
        <div class="center-box pull-right">
          {{#if closed}}
            <div class="pull-right alert alert-info">Day closed</div>
          {{else}}
            <button class="btn btn-primary pull-right" {{action saveChecklist this}}>Save</button>
            <button class="btn btn-warning pull-right" {{action closeChecklist this}}>Save &amp; Close</button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{else}}
  {{#if isSaved}}
    {{view Checklists.OverlayView}}
  {{else}}
    {{view Checklists.SavingOverlayView}}
  {{/if}}
{{/if}}
